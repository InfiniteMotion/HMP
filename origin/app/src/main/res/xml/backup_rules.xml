<?xml version="1.0" encoding="utf-8"?>
<!--
   Backup rules for Hearable Music Player
   See https://developer.android.com/guide/topics/data/autobackup
   Note: This file is ignored for devices older that API 31
-->
<full-backup-content>
    <!-- 备份 DataStore 偏好设置 -->
    <include domain="file" path="datastore/player_preferences.preferences_pb"/>
    
    <!-- 备份数据库 -->
    <include domain="database" path="music_database"/>
    
    <!-- 备份设置备份文件夹 -->
    <include domain="file" path="backups/"/>

</full-backup-content>