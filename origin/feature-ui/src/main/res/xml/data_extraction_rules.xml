<?xml version="1.0" encoding="utf-8"?>
<!--
   Data extraction rules for Hearable Music Player (Android 12+)
   See https://developer.android.com/about/versions/12/backup-restore#xml-changes
-->
<data-extraction-rules>
    <cloud-backup>
        <!-- 备份 DataStore 偏好设置 -->
        <include domain="file" path="datastore/player_preferences.preferences_pb"/>
        
        <!-- 备份数据库 -->
        <include domain="database" path="music_database"/>
        
        <!-- 备份设置备份文件夹 -->
        <include domain="file" path="backups/"/>
        
        <!-- 排除缓存 -->
        <exclude domain="file" path="cache/"/>
    </cloud-backup>
    
    <device-transfer>
        <!-- 设备迁移时包含所有用户数据 -->
        <include domain="file" path="datastore/"/>
        <include domain="database" path="music_database"/>
        <include domain="file" path="backups/"/>
    </device-transfer>
</data-extraction-rules>